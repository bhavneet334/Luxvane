<!DOCTYPE html>
<html>
  <head>
    <title>Categories â€“ Luxvane Admin</title>
    <link rel="stylesheet" href="/stylesheets/layout.css">
    <link rel="stylesheet" href="/stylesheets/products.css">
    <link rel="stylesheet" href="/stylesheets/header.css">
  </head>
  <body>

    <div class="admin-shell">

      <!-- SIDEBAR -->
      <!-- <aside class="products-sidebar">
        <h4>All Products</h4>
        <h4>Filter by Categories</h4>
      </aside> -->

      <aside class="products-sidebar">
        <a href="/owners/products/create" class="btn btn-primary">
          + Create product
        </a>

        <h4 class="active">All Products</h4>
        <h4>Filter by Categories</h4>
      </aside>


      <!-- MAIN AREA -->
      <div class="admin-main">

        <!-- HEADER -->
        <%- include('../partials/header.ejs') %>

        <!-- FLASH MESSAGES -->
        <% if (success && success.length > 0) { %>
          <div class="flash flash-success"><%= success %></div>
        <% } %>

        <% if (error && error.length > 0) { %>
          <div class="flash flash-error"><%= error %></div>
        <% } %>

        <!-- PAGE CONTENT -->
        <main class="page-container product-page">
          
          <div class="products-grid">
            <% products.forEach(p => { %>
              <div class="product-card">

                <img src="<%= p.image %>" class="product-img" />

                <h2 class="product-name"><%= p.name %></h2>

                <p class="product-price"><%= p.price %>$</p>

                <p class="product-desc"><%= p.description %></p>

                <% if (p.discount && p.discount > 0) { %>
                  <p class="product-discount">
                    Discount: <%= p.discount %>%
                  </p>
                <% } %>

                <div class="product-actions">
                  <a
                    href="/owners/products/<%= p._id %>/edit"
                    class="btn btn-outline"
                  >
                    Edit
                  </a>

                  <form
                    action="/owners/products/<%= p._id %>/delete"
                    method="POST"
                  >
                    <button type="submit" class="btn btn-danger">
                      Delete
                    </button>
                  </form>
                </div>

              </div>
            <% }) %>
          </div>

        </main>
      </div>
    </div>

  </body>
</html>
