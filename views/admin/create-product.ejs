<!DOCTYPE html>
<html>
  <head>
    <title>Create Product â€“ Luxvane Admin</title>
    <link rel="stylesheet" href="/stylesheets/dashboard.css" />
    <link rel="stylesheet" href="/stylesheets/create-product.css" />
  </head>
  <body class="dashboard-body">
    <div class="dashboard-container">
      <header class="dashboard-header">
        <div class="dashboard-brand">
          <span class="logo-circle">L</span>
          <span class="brand-name">Luxvane Admin</span>
        </div>

        <div class="dashboard-user">
          <a href="/owners/logout" class="btn btn-outline">Logout</a>
        </div>
      </header>

      <main class="product-form-page">
        <div class="product-form-header">
          <h1>Create Product</h1>
          <a href="/owners/products" class="btn btn-outline"
            >Back to Products</a
          >
        </div>

        <form action="/owners/products" method="POST" class="product-form">
          <div class="form-row">
            <label for="name">Name</label>
            <input
              id="name"
              name="name"
              type="text"
              placeholder="Product name"
              required
            />
          </div>

          <div class="form-row">
            <label for="price">Price</label>
            <input
              id="price"
              name="price"
              type="number"
              step="0.01"
              placeholder="e.g. 49.99"
              required
            />
          </div>

          <div class="form-row">
            <label for="image">Image URL</label>
            <input
              id="image"
              name="image"
              type="text"
              placeholder="https://..."
              required
            />
          </div>

          <div class="form-row">
            <label for="description">Description</label>
            <textarea
              id="description"
              name="description"
              rows="3"
              type="text"
              placeholder="Description"
            ></textarea>
          </div>

          <div class="form-row">
            <label for="discount">Discount (%)</label>
            <input
              id="discount"
              name="discount"
              type="number"
              min="0"
              max="100"
              placeholder="Optional"
            />
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              Create Product
            </button>
            <a href="/owners/products" class="btn btn-outline">Cancel</a>
          </div>
        </form>
      </main>
    </div>
  </body>
</html>
