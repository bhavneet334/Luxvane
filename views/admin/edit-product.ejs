<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product â€“ Luxvane Admin</title>

    <link rel="stylesheet" href="/stylesheets/layout.css" />
    <link rel="stylesheet" href="/stylesheets/product-form.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
</head>

<body>
    <%- include('../partials/header.ejs') %>

    <div class="page-container product-container">
        <main class="product-form-page">

            <% if (success && success.length > 0) { %>
                <div class="flash flash-success"><%= success %></div>
            <% } %>

            <% if (error && error.length > 0) { %>
                <div class="flash flash-error"><%= error %></div>
            <% } %>

            <div class="product-form-header">
                <h1 class="page-title">Edit Product</h1>

                <!-- Back Button -->
                <a href="/owners/products" class="btn btn-outline">
                    Back to Products
                </a>
            </div>

            <form action="/owners/products/<%= product._id %>/update" method="POST" class="product-form" enctype="multipart/form-data">

                <div class="form-row">
                    <label for="name">Name</label>
                    <input
                        id="name"
                        name="name"
                        type="text"
                        placeholder="Product name"
                        value="<%= product.name %>"
                    />
                </div>

                <div class="form-row">
                    <label for="price">Price</label>
                    <input
                        id="price"
                        name="price"
                        type="number"
                        step="0.01"
                        placeholder="e.g. 49.99"
                        value="<%= product.price %>"
                    />
                </div>

                <div class="form-row">
                    <label>Current Image</label>
                    <img src="<%= product.image%>" alt="Product Image" width="120" />
                </div> 

                <div class="form-row">
                    <label for="image">Change image</label>
                    <input name="uploaded_file" type="file"/>
                </div>

                
                <div class="form-row">
                    <label for="category">Category</label>
                    <select name="category" id="category" required>
                    <option hidden value="">Select one</option>

                    <% categories.forEach(c => { %>
                        <option value="<%= c._id %>">
                        <%= c.name %>
                        </option>
                    <% }) %>
                    </select>
                </div>

                <div class="form-row">
                    <label for="description">Description</label>
                    <textarea
                        id="description"
                        name="description"
                        rows="3"
                        placeholder="Description"
                    ><%= product.description %></textarea>
                </div>

                <div class="form-row">
                    <label for="discount">Discount (%)</label>
                    <input
                        id="discount"
                        name="discount"
                        type="number"
                        min="0"
                        placeholder="Optional"
                        value="<%= product.discount %>"
                    />
                </div>

                <div class="form-actions">
                    
                    <button type="submit" class="btn btn-primary">
                        Update Product
                    </button>

                    
                    <a href="/owners/products" class="btn btn-outline">
                        Cancel
                    </a>
                </div>
            </form>

        </main>
    </div>
</body>
</html>
