<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Analytics - Luxvane Admin</title>
    <link rel="stylesheet" href="/stylesheets/layout.css" />
    <link rel="stylesheet" href="/stylesheets/header.css" />
    <link rel="stylesheet" href="/stylesheets/products.css" />
    <link rel="stylesheet" href="/stylesheets/analytics.css" />
  </head>
  <body>
    <div class="admin-shell">
      <aside class="admin-sidebar">
        <div class="sidebar-header"></div>

        <nav class="sidebar-nav">
          <div class="nav-section">
            <a href="/owners/dashboard" class="nav-item">
              <span class="nav-icon">ðŸ“Š</span>
              <span class="nav-label">Dashboard</span>
            </a>

            <a href="/owners/products" class="nav-item">
              <span class="nav-icon">ðŸ“¦</span>
              <span class="nav-label">All Products</span>
            </a>

            <a href="/owners/analytics" class="nav-item active">
              <span class="nav-icon">ðŸ“ˆ</span>
              <span class="nav-label">Analytics</span>
            </a>
          </div>
        </nav>
      </aside>

      <div class="admin-main">
        <%- include('../partials/header.ejs') %>

        <main class="page-container analytics-page">
          <div class="stats-grid">
            <div class="stat-card">
              <h2 class="stat-card-title">Total Products</h2>
              <p class="stat-card-value"><%= stats.totalProducts %></p>
            </div>
            <div class="stat-card">
              <h2 class="stat-card-title">Total Categories</h2>
              <p class="stat-card-value"><%= stats.totalCategories %></p>
            </div>
            <div class="stat-card">
              <h2 class="stat-card-title">Recent Products</h2>
              <p class="stat-card-value"><%= stats.recentProducts %></p>
            </div>
            <div class="stat-card">
              <h2 class="stat-card-title">Products with Discounts</h2>
              <p class="stat-card-value"><%= stats.discountedProducts %></p>
            </div>
          </div>

          <div class="category-section">
            <h2 class="category-section-title">Products By Category</h2>
            <div class="chart-container">
              <canvas id="productsByCategoryChart"></canvas>
            </div>
            <h2 class="category-section-title">Price Distribution</h2>
            <div class="chart-container">
              <canvas id="priceRangeChart"></canvas>
            </div>
          </div>
        </main>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
      const productsByCategory = <%- JSON.stringify(chartData.productsByCategory) %>;

      const labels = productsByCategory.map(item => item.name);
      const data = productsByCategory.map(item => item.count);

      const ctx = document.getElementById('productsByCategoryChart').getContext('2d');

      new Chart(ctx, {
          type: 'doughnut',
          data: {
          labels: labels,
          datasets: [{
            data: data,
            backgroundColor: [
            '#A78BFA',
            '#60A5FA',
            '#34D399',
            '#FBBF24',
            '#F87171',
            '#818CF8',
            '#FB7185'
            ]
          }]
          },
          options: {
          responsive: true,
          maintainAspectRatio: false
          }
      });

      const priceRanges = <%- JSON.stringify(chartData.priceRanges) %> ;

      const priceLabels = Object.keys(priceRanges);
      const priceData = Object.values(priceRanges);

      const priceCtx = document.getElementById('priceRangeChart').getContext('2d');

      new Chart(priceCtx, {
        type : 'bar',
        data : {
            labels : priceLabels,
            datasets : [{
                label : 'Number of products',
                data : priceData,
                backgroundColor : '#6366F1',
                borderColor: '#4F46E5',
                borderWidth: 1
            }]
        },
        options : {
            responsive: true,
            maintainAspectRatio: false,
            scales : {
                y: {
                  beginAtZero: true,
                  ticks: {
                    stepSize: 1
                  }
                }
            }
          }
      })
    </script>
  </body>
</html>
